/* pages/detail/detail.wxss */
.swiperImg{
    width: 100%;
    height: 200px;

}
swiper{
    height: 200px;
}
.detatabber{
    width: 100vw;
    display: flex;
    height: 100rpx;
    line-height: 100rpx;
    background-color: white;
    padding: 20rpx;
    text-align: center;
}
.detatabber view{
    flex:1
}
.detatabber .active{
    border-bottom: 3rpx solid pink;
}
.content{
    padding: 20rpx;
}
.user{
    overflow: hidden;
    padding: 20rpx;
}
.user .left{
    float: left;
    height: 100rpx;
    line-height: 100rpx;
}
.user .right{
    float: right;
    height: 100rpx;
    line-height: 100rpx;
}
.user image{
    width: 100rpx;
    border-radius: 50%;
}
.content image{
    width: 200rpx;
}

.bottom{
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    background-color: white;
    display: flex;
}
.bottom view{
    flex: 1;
    color: white;
}